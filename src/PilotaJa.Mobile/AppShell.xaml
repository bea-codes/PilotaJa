<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PilotaJa.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PilotaJa.Mobile.Views"
    Title="PilotaJá">

    <TabBar>
        <ShellContent
            Title="Início"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:HomePage}" />
        
        <ShellContent
            Title="Instrutores"
            Icon="search.png"
            ContentTemplate="{DataTemplate views:InstrutoresPage}" />
        
        <ShellContent
            Title="Agendamentos"
            Icon="calendar.png"
            ContentTemplate="{DataTemplate views:AgendamentosPage}" />
        
        <ShellContent
            Title="Perfil"
            Icon="person.png"
            ContentTemplate="{DataTemplate views:PerfilPage}" />
    </TabBar>

    <!-- Rotas para navegação -->
    <Shell.FlyoutBehavior>
        <OnPlatform x:TypeArguments="FlyoutBehavior">
            <On Platform="iOS, Android" Value="Disabled" />
        </OnPlatform>
    </Shell.FlyoutBehavior>

</Shell>
