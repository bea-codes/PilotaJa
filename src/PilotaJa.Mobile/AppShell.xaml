<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PilotaJa.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PilotaJa.Mobile.Views"
    Title="PilotaJá">

    <TabBar>
        <ShellContent
            Title="Início"
            Route="HomePage"
            ContentTemplate="{DataTemplate views:HomePage}" />
        
        <ShellContent
            Title="Instrutores"
            Route="InstructorsPage"
            ContentTemplate="{DataTemplate views:InstructorsPage}" />
        
        <ShellContent
            Title="Agendamentos"
            Route="AppointmentsPage"
            ContentTemplate="{DataTemplate views:AppointmentsPage}" />
        
        <ShellContent
            Title="Perfil"
            Route="ProfilePage"
            ContentTemplate="{DataTemplate views:ProfilePage}" />
    </TabBar>

    <!-- Routes for navigation -->
    <Shell.FlyoutBehavior>
        <OnPlatform x:TypeArguments="FlyoutBehavior">
            <On Platform="iOS, Android" Value="Disabled" />
        </OnPlatform>
    </Shell.FlyoutBehavior>

</Shell>
